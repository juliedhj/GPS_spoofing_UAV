<?xml version="1.0"?>
<launch>
	<!-- Include the MAVROS node with SITL and Gazebo -->
	<include file="$(find px4)/launch/mavros_posix_sitl.launch">
            <arg name="world" default="$(find mavlink_sitl_gazebo)/worlds/trondheim.world"/>
	</include>

	<!-- Our node to control the drone -->
	<node pkg="offboard_cpp" type="offb_node.cpp" name="offb_node_cpp" required="true" output="screen" />
</launch>
